<% extend('layout') %>
<div style="margin-left:0px;max-width: calc(100% - 0px)" class="container">
    <div class="row">
        <div class="col-sm-12">
            <div class="white-box">
                <h3 class="box-title">Applicants table</h3>
                <a href='/users/addemployments/' class="edita"> <label>Add applicants</label><i class="fa-solid fa-user-plus"></i></a>
                <div class="table-responsive">
                    <table  class="table table-striped" style="border: 1px solid lightblue">
                        <thead>
                        <tr>
                            <th class="border-top-0">#</th>
                            <th class="border-top-0">
                                <p>Դիմելու</p>
                                <p>ամսաթիվ</p>
                            </th>
                            <th class="border-top-0">
                                <p>Հարցազրույցի</p>
                                <p>ամսաթիվ</p>
                            </th>
                            <th style="margin: 0px 40px;"  class="border-top-0">
                                <p>Անուն</p>
                                <p>Ազգանուն</p>
                            </th>
                            <th class="border-top-0">
                                <p>Ծննդյան</p>
                                <p>օր,ամիս,տարի</p>
                            </th>
                            <th class="border-top-0">
                                <p>Մասնագի-</p>
                                <p>տությունը</p>
                            </th>
                            <th class="border-top-0">
                                <p>Կրթության</p>
                                <p>ID</p>
                            </th>
                            <th class="border-top-0">
                                <p>Փորձի</p>
                                <p>ID</p>
                            </th>
                            <th class="border-top-0">
                                <p>Մեկնաբանութ-</p>
                                <p>յուններ</p>
                            </th>
                            <th class="border-top-0">
                                <p>Հեռախոսա-</p>
                                <p>համար</p>
                            </th>
                            <th class="border-top-0">
                                <p>Email or</p>
                                <p>Linkedin</p>
                            </th>

                        </tr>
                        </thead>
                        <tbody class="tbody">
                        <% dashboard.forEach(function(row){ %>
                            <tr>
                                <td><%= row.id %></td>
                                <td><%= row.application_date %></td>
                                <td><%= row.interview_date %></td>
                                <td><%= row.full_name %></td>
                                <td><%= row.birthday %></td>
                                <td><%= row.profession %></td>
                                <td><%= row.education_id %></td>
                                <td><%= row.experience_id %></td>
                                <td><%= row.comments %></td>
                                <td><%= row.phone_number %></td>
                                <td><%= row.email %></td>

                                <td>

                                    <a href='/users/edit/<%= row.id %>' class="edita"><i class="fa-solid fa-pen"></i></a>
                                    <button onclick="deleteDashboard(<%= row.id %>, event)" >
                                        <i class="fa-solid fa-circle-minus"></i>
                                   </button>

                                    <!--<button onclick="deleteDashboard(alert(<%= row.id %>))" class="delete">Destroy</button>-->
                                </td>
                            </tr>
                        <% }) %>
                        </tbody>
                    </table>
                    <a href='/users/files' class="edita">filesssssasss</a>
                </div>
            </div>
        </div>
    </div>
</div>