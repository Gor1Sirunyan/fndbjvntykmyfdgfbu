<% extend('layout') %>
<div id="container">
    <h3 class="box-title">Applicants education table</h3>
    <a href='/users/education/' class="edita"> <label>Add applicants education</label><i class="fa-solid fa-person-chalkboard"></i></a>
    <table class="table table-striped table-hover">
        <thead>
        <tr>
            <th>#</th>
            <th>Համալսարան</th>
            <th>Լեզուներ</th>
            <th>Դասընթացներ</th>
            <th>Ուղղվածություն</th>

        </tr>
        </thead>
        <div>
            <tbody>
            <% educationview.forEach(function(row){ %>
                <tr>
                    <td><%= row.id %></td>
                    <td><%= row.university %></td>
                    <td><%= row.languages %></td>
                    <td><%= row.courses %></td>
                    <td><%= row.direction %></td>
                    <td>
                        <a href='/users/editeducation/<%= row.id %>' class="edita"><i class="fa-solid fa-pen"></i></a>
                        <button onclick="deleteEducation(<%= row.id %>, event)" class="delete">
                            <i class="fa-solid fa-person-circle-minus"></i>
                        </button>
                    </td>
                </tr>
            <% }) %>

            </tbody>

        </div >

    </table>
    <div class="dvd1">
        <a class="employ" href="/users/universities">Համալսարաններ</a>
    </div>
</div>
